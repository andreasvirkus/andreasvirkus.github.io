@require './config'
@require '../css/variables.css'
@require './nprogress'
@require './code'
@require './custom-blocks'
@require './arrow'

.navbar
  position fixed
  display flex
  z-index 4
  top 0
  left var(--bg-border)
  right var(--bg-border)
  height var(--navbar-height)

.content
  margin 0 auto
  p.demo
    padding 1rem 1.5rem
    border 1px solid #ddd
    border-radius 4px
  img
    max-width 100%
.content + .content
  padding-top 0

p a code
  font-weight 400
  color var(--accent-color)

kbd
  background #eee
  border solid 0.15rem #ddd
  border-bottom solid 0.25rem #ddd
  border-radius 0.15rem
  padding 0 0.15em

ul, ol
  padding-left 1.2em

strong
  font-weight 600

h1, h2, h3, h4, h5, h6
  font-weight 600
  line-height 1.25
  .content > &
  article > &
    margin-top calc(0.5rem - var(--navbar-height))
    padding-top calc(var(--navbar-height) + 1rem)
    margin-bottom 0
    &:first-child
      margin-top 0
      margin-bottom 1rem
      + p, + pre, + .custom-block
        margin-top 2rem
  &:hover .header-anchor
    opacity: 1

h1
  font-size 2.2rem

h2
  font-size 1.65rem
  padding-bottom .3rem

h3
  font-size 1.35rem

a.header-anchor
  font-size 0.85em
  float left
  margin-left -0.87em
  padding-right 0.23em
  margin-top 0.125em
  opacity 0
  &:hover
    text-decoration none

code, kbd
  font-family var(--font-mono)

p, ul, ol
  line-height 1.7

hr
  border 0
  border-top 1px solid var(--border-color)

table
  border-collapse collapse
  margin 1rem 0

tr
  border-top 1px solid #dfe2e5
  &:nth-child(2n)
    background-color #f6f8fa

th, td
  border 1px solid #dfe2e5
  padding .6em 1em

.theme-container
  &.sidebar-open
    .sidebar-mask
      display: block
  &.no-navbar
    .content
      h1, h2, h3, h4, h5, h6
        margin-top 1.5rem
        padding-top 0


@media (min-width: (35rem))
  /* TODO: Fix scrollbar shift on desktop
  html {
    overflow auto
    margin-left calc(100vw - 100%)
    margin-right 0
  }
  */
  .theme-container.no-sidebar
    .sidebar
      display none
  main article,
  main .content
    & > *:first-child:not(.blog__menu-list)
      margin-top var(--navbar-height)

@require './mobile.styl'
